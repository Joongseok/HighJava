<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="writeVBox" alignment="CENTER" prefHeight="669.0" prefWidth="728.0" style="-fx-background-color: #eaeaea;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="board.controller.FxBoardWriteController">
   <children>
      <HBox alignment="BASELINE_CENTER" prefHeight="28.0" prefWidth="560.0">
         <children>
            <Label text="새글 쓰기">
               <font>
                  <Font size="37.0" />
               </font>
            </Label>
         </children>
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="BASELINE_LEFT" prefHeight="28.0" prefWidth="560.0">
         <children>
            <Label text="작성자 : ">
               <font>
                  <Font size="17.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfWriter" prefHeight="23.0" prefWidth="200.0" promptText="작성자를 입력하세요." />
         </children>
         <padding>
            <Insets bottom="20.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="28.0" prefWidth="560.0">
         <children>
            <Label text="제   목 : ">
               <font>
                  <Font size="17.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfTitle" prefHeight="23.0" prefWidth="494.0" promptText="제목을 입력하세요." />
         </children>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="420.0" prefWidth="560.0">
         <children>
            <Label prefHeight="21.0" prefWidth="106.0" text="내   용 : ">
               <font>
                  <Font size="17.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Label>
            <TextArea fx:id="txtContents" prefHeight="425.0" prefWidth="632.0" promptText="내용을 입력하세요." />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button fx:id="btnWrite" mnemonicParsing="false" onAction="#btnWriteAction" text="저   장">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="btnCancle" mnemonicParsing="false" onAction="#btnCancleAction" text="취    소">
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
