<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="370.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mvc.controller.FxMemberController">
   <children>
      <HBox alignment="TOP_CENTER" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="회원ID : " />
            <TextField fx:id="memId" promptText="회원ID" />
         </children>
         <VBox.margin>
            <Insets bottom="2.0" left="10.0" top="10.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="회원이름 : " />
            <TextField fx:id="memName" promptText="회원이름" />
         </children>
         <VBox.margin>
            <Insets bottom="2.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="회원전화 : " />
            <TextField fx:id="memTel" promptText="회원전화" />
         </children>
         <VBox.margin>
            <Insets bottom="2.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_CENTER" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Label text="회원주소 : " />
            <TextField fx:id="memAddr" promptText="회원주소" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="20.0" prefWidth="200.0">
         <children>
            <Button fx:id="add" mnemonicParsing="false" onAction="#addMem" prefWidth="65.0" text="추가">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="edit" mnemonicParsing="false" onAction="#editMem" prefWidth="65.0" text="수정">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="delete" mnemonicParsing="false" onAction="#delMem" prefWidth="65.0" text="삭제">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="ok" disable="true" mnemonicParsing="false" onAction="#okMenu" prefWidth="65.0" text="확인">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="cancle" disable="true" mnemonicParsing="false" onAction="#cancleMenu" prefWidth="65.0" text="취소">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </HBox>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="idCol" prefWidth="75.0" text="회원ID" />
          <TableColumn fx:id="nameCol" prefWidth="75.0" text="회원이름" />
            <TableColumn fx:id="telCol" prefWidth="75.0" text="회원전화" />
            <TableColumn fx:id="addrCol" prefWidth="200.0" text="회원주소" />
        </columns>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </TableView>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
